@import @"version.inc";

#define { toolsets: "v120,v140"; }

configurations {
	UserPlatformToolset {
	    // Needed because ptk lacks VS2015 support
        	key = "PlatformToolset";
        	choices: ${toolsets};
	};
}

nuget {
	nuspec {
		id = freetype;
		version : ${package-version};
		title: freetype;
		authors: {David Turner, Robert Wilhelm, Werner Lemberg, freetype contributors};
		owners: {CoApp Project, Vincent Povirk};
		licenseUrl: "http://www.freetype.org/license.html";
		projectUrl: "http://github.com/coapp-packages/freetype";
		iconUrl: "http://www.freetype.org/image/fond3.png";
		requireLicenseAcceptance:false;
		summary: "FreeType is a freely available software library to render fonts.";
		description: @"FreeType is a freely available software library to render fonts.
Homepage: http://www.freetype.org/index.html";
		releaseNotes: "Release of freetype 2.6.2 libraries.";
		copyright: Copyright 2006-2015;
		tags: { freetype, font, native, CoApp, v140, v120, dynamic, static };

	};

	files {
		include: {
			..\include\**\*.h,
			};

		// FIXME: Cannot build docs yet

		source += {
			..\include\**\*.h,
			..\src\**\*.c,
		};
		
		("Win32,x64",${toolsets},dynamic,release) => {
		    [${0},${1},${2},${3}] {
    			bin: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262.dll };
    			symbols: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262.pdb };
			};
		};
		
		("Win32,x64",${toolsets},dynamic,debug) => {
		    [${0},${1},${2},${3}] {
    			bin: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262d.dll };
    			symbols: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262d.pdb };
			};
		};

		("Win32,x64",${toolsets},"static,dynamic",release) => {
		    [${0},${1},${2},${3}] {
			    lib: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262.lib };
		    };
		};

		("Win32,x64",${toolsets},"static,dynamic",debug) => {
		    [${0},${1},${2},${3}] {
			    lib: { ..\builds\windows\vc2010\Output\${0}\${3}\${1}\${2}Library\freetype262d.lib };
		    };
		};
	};

	targets {
		Defines += HAS_FREETYPE;
	};
}

